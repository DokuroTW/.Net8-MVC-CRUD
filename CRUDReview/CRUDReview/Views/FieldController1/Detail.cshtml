@model CRUDReview.Models.Field
<h1>Field Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Title:</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Content:</dt>
        <textarea class="form-control" rows="10" cols="50" readonly>@Model.Content</textarea>
    </dl>
</div>

<a class="btn btn-primary" asp-controller="FieldController1" asp-action="List">Back to List</a>
